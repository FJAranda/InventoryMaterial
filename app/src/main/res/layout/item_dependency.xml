<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/mliItemIcon"
        android:layout_width="@dimen/letter_icon_size"
        android:layout_height="@dimen/letter_icon_size"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/letter_icon_padding_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.github.ivbaranov.mli.MaterialLetterIcon>

    <TextView
        android:id="@+id/tvItemDependencySubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mliItemIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvItemDependencyTitulo"
        tool:text="Textview" />

    <TextView
        android:id="@+id/tvItemDependencyTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mliItemIcon"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="Textview" />


</android.support.constraint.ConstraintLayout>